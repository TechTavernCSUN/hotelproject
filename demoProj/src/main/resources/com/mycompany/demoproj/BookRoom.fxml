    <top>
        <HBox alignment="CENTER_LEFT" prefHeight="50.0" prefWidth="600.0" style="-fx-background-color: #333333;">
            <!-- Back button -->
            <Button mnemonicParsing="false" onAction="#handleBack" text="Back" textFill="WHITE" />
