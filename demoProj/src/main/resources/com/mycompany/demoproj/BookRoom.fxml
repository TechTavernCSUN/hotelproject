            </Label>
        </HBox>
    </top>
    <center>
        <VBox alignment="CENTER" prefHeight="350.0" prefWidth="600.0" spacing="10.0">
            <TextField fx:id="searchField" promptText="Search Rooms" />
            <TableView fx:id="roomTable" prefHeight="459.0" prefWidth="800.0">
                <columns>
                    <TableColumn fx:id="roomIdColumn" text="Room ID" />
                    <TableColumn fx:id="roomTypeColumn" text="Room Type" />
                    <TableColumn fx:id="priceColumn" text="Price" />
                    <TableColumn fx:id="availabilityColumn" text="Availability" />
                    <TableColumn fx:id="reserveColumn" text="Reserve" />
                </columns>
            </TableView>
        </VBox>
    </center>
    <bottom>
        <HBox alignment="CENTER" prefHeight="50.0" prefWidth="600.0" style="-fx-background-color: #333333;">
            <CheckBox fx:id="showAvailableCheckBox" text="Show Available Rooms Only" textFill="WHITE" />
        </HBox>
    </bottom>
</BorderPane>
