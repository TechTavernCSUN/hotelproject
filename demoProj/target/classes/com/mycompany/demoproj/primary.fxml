        <Button fx:id="managerSignInButton" layoutX="601.0" layoutY="40.0" onAction="#handleSignIn" prefHeight="50.0" prefWidth="190.0" style="-fx-font-size: 16pt; -fx-text-fill: black; -fx-background-color: gray; -fx-background-radius: 0px; -fx-border-color: black; -fx-border-radius: 0px;" text="Manager Sign In" />
