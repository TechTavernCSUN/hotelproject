                <columns>
                    <TableColumn fx:id="reserveIdColumn" prefWidth="88.0" text="Reservation ID" />
                    <TableColumn fx:id="roomidColumn" prefWidth="88.0" text="Room Number" />
                    <TableColumn fx:id="emailColumn" prefWidth="88.0" text="Email" />
                    <TableColumn fx:id="clientColumn" prefWidth="88.0" text="Client" />
                    <TableColumn fx:id="availabilityColumn" text="Check-in" />
                    <TableColumn fx:id="checkOutColumn" text="Check-out" />
                    <TableColumn fx:id="priceColumn" text="Price" />
                    <TableColumn fx:id="totalColumn" text="Total" />
                </columns>
            </TableView>
        </VBox>
    </center>
    <bottom>
        <HBox alignment="CENTER" prefHeight="50.0" prefWidth="600.0" style="-fx-background-color: #333333;">
            <CheckBox fx:id="showAvailableCheckBox" text="Show Available Rooms Only" textFill="WHITE" />
        </HBox>
    </bottom>
</BorderPane>
