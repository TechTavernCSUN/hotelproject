<BorderPane fx:id="rootPane" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"> <!--fx:controller="com.mycompany.demoproj.BookRoomController"> -->
    <top>
        <HBox alignment="CENTER" prefHeight="50.0" prefWidth="600.0" style="-fx-background-color: #333333;">
            <Label text="Hotel Reservation Information System" textFill="WHITE">
                <font>
                    <Font name="System Bold" size="20.0" />
                </font>
            </Label>
        </HBox>
    </top>
    <center>
        <VBox alignment="CENTER" prefHeight="300.0" prefWidth="600.0" spacing="10.0">
            <TextField fx:id="searchField" promptText="Search Rooms" />
